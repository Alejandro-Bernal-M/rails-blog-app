<h2 class= "usersTitle">Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
  <div class="formDiv">
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: 'New Passsword'  %>
  </div>

  <div class="formDiv">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm new password"  %>
  </div>

  <div class="formDiv">
    <%= f.submit "Change my password" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
